<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/language_picker_title_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/language_polish_RBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_flag_pl"
            android:drawablePadding="6dp"
            android:text="Polski"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/language_english_RBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_flag_uk"
            android:drawablePadding="6dp"
            android:text="English"
            android:textSize="14sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/language_cancel_Btn"
            style="@style/DialogFragmentButton"
            android:layout_marginEnd="12dp"
            android:text="@string/exit" />

        <Button
            android:id="@+id/language_save_Btn"
            style="@style/DialogFragmentButton"
            android:layout_marginEnd="12dp"
            android:text="@string/save" />

    </LinearLayout>
</LinearLayout>


